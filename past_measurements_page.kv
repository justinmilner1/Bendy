<past_measurements_page@Screen>
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        spacing: "10dp"
        padding: "10dp"
        id: vertical_box_layout
        ############### Title, help, and settings ##############
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1

            Button:
                id: back_button
                background_color: 0,0,0,0
                on_release: root.leave()
                size_hint_x: .2
                Image:
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    source: './images/app_images/back_button.jpeg'

            Button:
                text: "past_measurements page"
                size_hint_x: .8
                pos_hint: {"center_y": .5}
        ScrollView:
            GridLayout:
                size_hint_y: None
                cols: 2
                row_default_height: root.height*0.3
                height: self.minimum_height
                padding: "10dp"
                id: vertical_box_layout

