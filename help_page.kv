<help_page@Screen>
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: main_layout
        orientation: 'vertical'
        spacing: "10dp"
        padding: "10dp"
        ############### Title, back button, and help button ##############
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            Button:
                on_release: app.root.current = "main_page"
                size_hint: 1, 1
                background_color:0,0,0,0
                Image:
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    source: './images/app_images/back_button.jpeg'
            Button:
                text: "Help page"
                size_hint: 2.5, 1
                pos_hint: {"center_y": .5}

            Button:
                id: settings_button
                background_color: 0,0,0,0
                on_release: app.root.current = "settings_page"
                Image:
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    source: './images/app_images/settingsicon.png'

        ############### Instructions ##############
        BoxLayout:
            size_hint: 1, .8
            orientation: 'vertical'
            Button:
                text: 'Instructions:'
                font_size: self.width/16
            Button:
                text: '1) From home screen, press “Take new measurement”'
                font_size: self.width/25
            Button:
                text: '2) Set measurement time, then press “Start measurement”'
                font_size: self.width/25
            Button:
                text: '3) Perform and hold movement in front of camera until measurement time has ended'
                font_size: self.width/25